@using ECommerceCustomerOrder.Model
@model ECommerceCustomerOrder.Model.LoginDto
@{
    ViewData["Title"] = "AddCustomer";
    Layout = "~/Pages/Shared/_CustomerLayout.cshtml";
 
}


<div>
   

    <div class="btn btn-warning " id="heading">
     <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person" viewBox="0 0 16 16">
    <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z"/>
    </svg>
        @Html.ActionLink("Back to Sign in", "CustomerView")
    </div>

    <div class="card-body " id="card">
        <h3 class="col-md-6 offset-3" id="heading">     Registration form </h3>
       
       @using(Html.BeginForm("AddCustomer","CustomerMvc",FormMethod.Post,new {id="Customerform"}))
        {
        
       
       <div >
         <div align="center" class="col-md-12"  >
               
               <div class=" row m-5">
                        <div class="col-md-6">Name<span id="mandatory"> * </span></div>
                        <div class="col-md-6" >
                            @Html.TextBoxFor(model=>model.Name , new { @class="form-control", required = "required" , maxlength = "20"} )
                        </div>
                    
               </div>

                    @if (User.Identity.IsAuthenticated) {

                        <div class=" row m-5">
                            <div class="col-md-6">Roll<span id="mandatory"> * </span></div>
                            <div class="col-md-6">
                                @Html.DropDownListFor(model=>model.RollId ,Model.RollList ,new { @class="form-control", required = "required" , maxlength = "20"} )
                            </div>

                        </div>

                    }

                    else {
                        <div class=" row m-5">
                            <div class="col-md-6">Role<span id="mandatory"> * </span></div>
                            <div class="col-md-6">
                                @Html.DropDownListFor(model=>model.RollId ,Model.RollList ,new { @class="form-control",@disabled="disabled", required = "required" , maxlength = "20"} )
                            </div>

                        </div>

                    }

               

                
                <div class=" row m-5">
                    <div class="col-md-6">Password<span id="mandatory"> * </span></div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(model=>model.Password , new { @class="form-control", required = "required" , maxlength = "20"} )
                    </div>

                </div>
                    <div class=" row m-5">
                        <div class="col-md-6">Gender<span id="mandatory"> * </span></div>
                        <div class="col-md-6">
                            <label for="gender">Male</label>
                            @Html.RadioButtonFor(m=>m.Gender ,"Male")
                            <label for="gender">Female</label>
                            @Html.RadioButtonFor(m=>m.Gender ,"Female")
                      
                        </div>

                    </div>
                <div  class="row m-5">
                        <div class="col-md-6">Contact Number <span id="mandatory"> * </span></div>
                          <div class="col-md-6">@Html.TextBoxFor(model=>model.ContactNumber, new { @class="form-control", required = "required" , maxlength = "20"}  )</div>
                 </div>
                   
                    <div class=" justify-content-center col-md-6 offset-">  <input type="submit" class="btn btn-danger" value="Submit" /></div>
                </div>
       </div>
    }



      
    </div>
    
</div>
@section scripts{
    <script src="~/js/customer.js"></script>
}