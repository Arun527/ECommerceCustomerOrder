@using ECommerceApi.Model
@model Customer
 @using(Html.BeginForm("Updatedetail","CustomerMvc",FormMethod.Post))
        {
 <table>
            <tr>
                <td>Id</td>
                <td>
                    @Html.DisplayFor(model => model.CustomerId)
                    @Html.HiddenFor(model => model.CustomerId)
                </td>
            </tr>
            <tr>
                <td>Name</td>
                <td>
                    @Html.TextBoxFor(model => model.Name, new { required = "required" , maxlength = "20"} )
                </td>
            </tr>
            <tr>
                <td>ContactNumber</td>
                <td>
                    @Html.TextBoxFor(model => model.ContactNumber, new { required = "required" , maxlength = "20"} )
                </td>
            </tr>



             <tr>
                <td class="btn btn-primary">
                <input type="submit" value="Create" class="btn btn-default" />
                </td>
             </tr>
         
            

 </table>


                }