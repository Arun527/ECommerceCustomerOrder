@model ECommerceApi.Model.Orders
@{
    ViewData["Title"] = "AddOrders";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<body   style="background-color:lightblue">
    <div class="btn btn-warning " style="margin-bottom:30px">
        @Html.ActionLink("Back To List", "OrderView")
    </div>

    <div  class="card-body bg-info  " style="margin-left:30%;margin-right:30%"  >
        <h3  class="col-md-6 offset-3" style="margin-top:5%" > Registration form </h3>
    
       

       
             @using(Html.BeginForm("AddOrder","OrderMvc",FormMethod.Post))
        {
        
       
       <div >
        
               
               <div class="row m-3" >
                       <div class="col-md-3 offset-1">CustomerId</div>
                        <div class="col-md-3 offset-1">
                            @Html.TextBoxFor(model=>model.CustomerId , new { required = "required" , maxlength = "20"} )
                        </div>
               </div>
           

                <div class="row m-3 ">
                <div class="col-md-2 offset-7">
                    <input type="submit" class="btn btn-danger" value="Submit" />
                    </div>
                </div>
                   
                    
              
       </div>
    }
    
    
      
     
     
    </div>
    
