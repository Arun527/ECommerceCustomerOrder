@using ECommerceApi.Model

@model Product

@using(Html.BeginForm("AddProduct" ,"ProductMvc",FormMethod.Post)){

    <table>
        <tbody>
            <tr>
                <td>
                    Id
                </td>
                <td>
                    @Html.DisplayFor(Model=>Model.ProductId)
                    @Html.HiddenFor(Model=>Model.ProductId)
                </td>
            </tr>
            <tr>
                <td>
                    <label>Name</label>
                </td>
                <td>
                    @Html.TextBoxFor(Model=>Model.Name)
                </td>
            </tr>
              <tr>
                <td>
                    <label>Price</label>
                </td>
                <td>
                    @Html.TextBoxFor(Model=>Model.Price)
                </td>
            </tr>
              <tr>
                <td>
                  
                </td>
                <td class="btn btn-success">
                    <input type="submit">
                </td>
            </tr>
        </tbody>
    </table>
}
